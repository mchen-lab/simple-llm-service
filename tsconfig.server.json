{
  "_appKitManaged": true,
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist-server",
    "rootDir": "./src",
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules", "dist", "dist-server", "src/**/*.test.ts", "src/**/__tests__/*"]
}

